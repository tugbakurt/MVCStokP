@using MVCStok.Models.Entity
@model List<TBL_musteriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>Müşteri Id </th>
        <th>Müşteri Adı </th>
        <th>Müşteri Soyadı </th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>

    <tbody>
        @foreach(var mst in Model)
            {
        <tr>
            
            <th>@mst.musteriid </th>
            <td>@mst.mmusteriad </td>
            <td>@mst.musterisoyad </td>
        <td><a href="/Musteri/Sil/@mst.musteriid" class="btn btn-danger">SİL</a></td>
        <td><a href="/Musteri/MusteriGetir/@mst.musteriid" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
            }


    </tbody>
</table>

<a href="/Musteri/YeniMusteri" class="btn btn-primary">Yeni Müşteri Ekle</a>